{
    "manifest_version": 3,

    "name": "URL Redirector",
    "description": "Custom URL redirector with regex pattern matching",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "images/icon-48.png",
            "96": "images/icon-96.png",
            "128": "images/icon-128.png"
        }
    },

    "permissions": [
        "webNavigation",
        "tabs",
        "storage",
        "history"
    ],

    "host_permissions": [
        "*://*/*"
    ]
}
